@RequestMapping("/rdv")
@Controller
public class RdvController {
@RequestMapping("/details/{name}")
public String findByName(
@PathVariable String name ) { ... }
@RequestMapping("/details/{name}/{date}")
public String findByNameAndDate(
@PathVariable String name,
@PathVariable String date ) { ... }
}
// Example
@RequestMapping("/hotels/{hotel}/*")
@RequestMapping("/fichier/{symbolicName:[a-z]+}{extension:\\.[a-z]+}") //as regular expressions
